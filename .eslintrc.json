{
  "root": true,
  "ignorePatterns": [
    "packages/**/node_modules",
    "*.json",
    "*.ico",
    "*.svg",
    "*.md"
  ],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
      "extends": ["next", "next/core-web-vitals"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      }
    }
  ]
}
